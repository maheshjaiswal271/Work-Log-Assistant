{
  "name": "Work Log Assistant",
  "description": "AI Powered Work Log Assistant",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title":"Work Log Assistant"
  },
  "side_panel":{
    "default_path": "sidepanel.html"
  },
  "background":{
    "service_worker": "background.js"
  },
  "host_permissions":[
      "http://localhost:8080/*",
      "<all_urls>"
  ],
  "content_security_policy":{
    "extention_pages": "script-src 'self'; object-src 'self';"
  },
  "permissions":[
    "activeTab",
    "storage",
    "sidePanel",
    "scripting"
  ]
}